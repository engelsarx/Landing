  <div class="offices__map-container">
    <div id="offices-map" class="offices__map"></div>
  </div>
  <div id="offices__address" class="offices__address">
      <button id="close-address" type="button" class="btn btn-icon close-address" data-dismiss="modal" aria-label="Close">
          <i aria-hidden="true">×</i>
      </button>
    <div class="photo-container">
      <img id="place-photo" src="images/Oficina-de-BABEL-en-Madrid.jpg" alt="oficina Madrid">
