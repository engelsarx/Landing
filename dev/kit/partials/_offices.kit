        <div class="offices__block">
          <h3>8 oficinas en 5 países</h3>
          <div class="button-container">
            <button id="barcelona" class="btn btn-icon btn-office">
              <i class="ibbc-icon-barcelona" aria-hidden="true"></i>
              <span>Barcelona</span>
            </button>
            <button id="casablanca" class="btn btn-icon btn-office">
              <i class="ibbc-icon-casablanca" aria-hidden="true"></i>
              <span>Casablanca</span>
            </button>
            <button id="cdmx" class="btn btn-icon btn-office">
              <i class="ibbc-icon-mexico" aria-hidden="true"></i>
              <span>Ciudad de México</span>
            </button>
            <button id="lisboa" class="btn btn-icon btn-office">
              <i class="ibbc-icon-lisboa" aria-hidden="true"></i>
              <span>Lisboa</span>
            </button>
            <button id="londres" class="btn btn-icon btn-office">
              <i class="ibbc-icon-londres" aria-hidden="true"></i>
              <span>Londres</span>
            </button>
            <button id="madrid" class="btn btn-icon btn-office active">
