    <div id="address-container" class="office">
        <h4>BABEL Madrid</h4>
        <p>C/ Príncipe de Vergara 108 28002 Madrid</p>
    </div>
    <div class="actions">
      <a id="link-phone" href="tel:917452370">
        <i class="ibbc-icon-phone" aria-hidden="true"></i>
        <span id="link-phone-string">917 452 370</span>
      </a>
      <a id="link-map" href="https://goo.gl/maps/52j1BChHJbD2" target="_blank">
          <i class="ibbc-icon-go" aria-hidden="true"></i>
          <span>Cómo llegar</span>
